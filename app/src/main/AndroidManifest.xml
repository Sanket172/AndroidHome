<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidhome">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidHome">
        <activity android:name=".LoginCheckerActivity"></activity>
        <!-- <activity android:name=".AfterSplash"></activity> -->
        <activity android:name=".SignupOrLogin" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".ProductFullView" />
        <activity
            android:name=".Product"
            android:usesCleartextTraffic="true" />
        <activity android:name=".Account" />
        <activity android:name=".OrderHistory" />
        <activity android:name=".DashboardActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".SplashActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".AfterSplash">

            <!-- android:theme="@style/SplashTheme"> -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>