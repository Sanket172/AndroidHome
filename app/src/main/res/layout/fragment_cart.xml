<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".CartFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="My cart"
        android:textColor="@color/design_default_color_secondary"
        android:textSize="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartrecycler"
        android:layout_width="409dp"
        android:layout_height="540dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Ctotal"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Total"
        android:textColor="@color/design_default_color_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cartrecycler" />

    <TextView
        android:id="@+id/Totaldisplay"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:text="100$"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginBottom="1dp"
        android:textColor="@color/design_default_color_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ctotal" />

    <Button
        android:id="@+id/placeorder"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="Place order"
        app:layout_constraintBottom_toBottomOf="@+id/Totaldisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Ctotal"
        app:layout_constraintTop_toTopOf="@+id/Ctotal" />

</androidx.constraintlayout.widget.ConstraintLayout>